<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <% if current_user %>
    <div class="card text-center pt-5 mx-auto" style="width:23rem">
      <h1>ログインできた！</h1>
      <p>e-mail: <%= current_user.email %></p>
      <%= link_to "サインアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "link-sbutton"%>
      <!-- posts_pathに遷移するボタンを追加 -->
        <%= link_to "投稿一覧へ", posts_path, class: "link-sbutton" %>
      </div>
    </div>
  <% else %>
    <div class="text-center">
      <h1>ログインしていない</h1>
      <%= link_to "サインイン", new_user_session_path, class: "link-sbutton" %>
    </div>
  <% end %>
</div>
