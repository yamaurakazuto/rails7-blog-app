<h1>Rails blog</h1>
<div class="container">
  <div class="d-flex justify-content-end">
    <% if user_signed_in? %>
      <%= button_to "サインアウト", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
    <% end %>
  </div>

<div class="button-container">
  <%= link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>

<ul>
  <% @posts.each do |post| %>
  <li>
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p><%= post.content %></p>
    <span>
      <small><%= post.created_at %></small>
    </span>
    <div class="edit-delete-wrapper">
      <%= link_to "編集", edit_post_path(post), class: "link-button" %> 
      <%= button_to "削除", post_path(post), method: :delete, class: "link-delete-button" %>
    </div>
  </li>
  <% end %>
</ul>
