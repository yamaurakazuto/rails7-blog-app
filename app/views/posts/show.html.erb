<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h2>Comments</h2>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <p><%= comment.content %></p>
      <span><small><%= comment.created_at %></small></span>
      <%= button_to '削除', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<h3>Add a comment:</h3>
<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Comment' %>
  </div>
<% end %>

<div class="button-container">
  <%= link_to 'Back to Posts', posts_path, class: 'link-button' %>
</div>

